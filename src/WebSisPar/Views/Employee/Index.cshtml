@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Person Table</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Title</th>
                        <th scope="col">Mail</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Image Url</th>
                        <th scope="col">Profil Url</th>
                        <th scope="col">Create Date</th>
                        <th scope="col">Update Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Delete</th>
                        <th scope="col">Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Title</td>
                            <td>@item.Mail</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.ImageUrl</td>
                            <td>@item.ProfilUrl</td>
                            <td>@item.CreateDate</td>
                            <td>@item.UpdateDate</td>
                            <td>@(item.Status ? "Aktif" : "Pasif")</td>
                            <td><a href="/Category/DeleteCategory/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                            <td><a href="/Category/UpdateCategory/@item.Id" class="btn btn-outline-success">Update</a></td>
                        </tr>
                    }

                </tbody>
            </table>
            <td><a href="/Employee/Create" class="btn btn-outline-info">New Record</a></td>
        </div>
    </div>
</div>

