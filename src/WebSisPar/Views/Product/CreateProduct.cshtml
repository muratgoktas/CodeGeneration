@model CreateProductDtos
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">New Product Create</h6>
        <form method="post">
            <label>Product Name</label>
            <input type="text" asp-for="Title" class="form-control border-0" />
            <br />
            <label>Product Price</label>
            <input type="text" asp-for="Price" class="form-control border-0" />
            <br />
            <label>Product ImageUrl</label>
            <input type="text" asp-for="CoverImage" class="form-control border-0" />
            <br />
            <label>Category Name</label>

            @Html.DropDownListFor(mcs => mcs.CategoryId,(List<SelectListItem>)ViewBag.m,new {@class="from-control"})
            <br />
            <label>Product Description</label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <br />
            <button class="btn btn-primary">Save Product</button>
        </form>
    </div>
</div>

