@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_FullLayout.cshtml";
    Layout = "~/Views/Admin/Index.cshtml";
}
<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Product Table</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Product Title</th>
                        <th scope="col">Product Price</th>
                        <th scope="col">Product ImageUrl</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Product Description</th>
                        <th scope="col">Delete</th>
                        <th scope="col">Update</th>
                        <th scope="col">Detail</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Title</td>
                            <td>@item.Price</td>
                            <td>@item.CoverImage</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td><a href="/Product/DeleteProduct/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                            <td><a href="/Product/UpdateProduct/@item.Id" class="btn btn-outline-success">Update</a></td>
                            <td><a href="/Product/DetailProduct/@item.Id" class="btn btn-outline-primary">Detail</a></td>
                        </tr>
                    }

                </tbody>
            </table>
            <td><a href="/Product/Create" class="btn btn-outline-info">New Record</a></td>
        </div>
    </div>
</div>