@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Category Table</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Category Name</th>
                        <th scope="col">Category Status</th>
                        <th scope="col">Delete</th>
                        <th scope="col">Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    { 
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@(item.Status ?"Aktif":"Pasif")</td>
                            <td><a href="/Category/DeleteCategory/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                            <td><a href="/Category/UpdateCategory/@item.Id" class="btn btn-outline-success">Update</a></td>
                    </tr>
                    }
                   
                </tbody>
            </table>
            <td><a href="/Category/CreateCategory" class="btn btn-outline-info">New Record</a></td>
        </div>
    </div>
</div>